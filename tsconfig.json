{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/types",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./node_modules/@types", "./@types"],
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "importHelpers": true,
        "baseUrl": "./",
        "downlevelIteration": true,
        "paths": {
            "tslib": [
                "@/node_modules/tslib/tslib.d.ts"
            ]
        },
    }
}